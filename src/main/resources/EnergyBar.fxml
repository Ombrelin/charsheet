<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXProgressBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="GridPane">
    <columnConstraints>

        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0"/>


    </columnConstraints>

    <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER">
        <JFXButton alignment="CENTER"  text="-" prefWidth="32"
                   onAction="#handleClickMinus"/>
    </VBox>
    <JFXTextField fx:id="field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <VBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="2">
        <JFXButton alignment="CENTER"  text="+" prefWidth="32"
                   onAction="#handleClickPlus"/>
    </VBox>

    <JFXProgressBar GridPane.rowIndex="0" GridPane.columnIndex="3" fx:id="bar" prefHeight="16.0" prefWidth="Infinity"
    />

    <JFXTextField fx:id="maxField" alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

</fx:root>
