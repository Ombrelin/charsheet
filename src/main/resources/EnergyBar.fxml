<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXProgressBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="GridPane">
    <columnConstraints>

        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="90.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0"/>

    </columnConstraints>

    <Label fx:id="label" text="Energie Astrale" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
    <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER">
        <JFXButton alignment="CENTER"  text="-" prefWidth="32"
                   onAction="#handleClickMinus"/>
    </VBox>
    <JFXProgressBar GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="bar" prefHeight="16.0" prefWidth="Infinity"
    />
    <VBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="2">
    <JFXButton alignment="CENTER"  text="+" prefWidth="32"
               onAction="#handleClickPlus"/>
    </VBox>
</fx:root>
