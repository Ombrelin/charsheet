<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import fr.arsene.charsheet.ui.components.CharacteristicBar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import fr.arsene.charsheet.ui.components.EnergyBar?>
<?import fr.arsene.charsheet.ui.adapters.ProtectionTable?>
<BorderPane prefWidth="1280" prefHeight="720" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="720"
            fx:controller="fr.arsene.charsheet.controller.MainController"
            minWidth="1280" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
            <JFXListView prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </left>
    <center>
        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">

            <GridPane BorderPane.alignment="CENTER" hgap="25" vgap="25" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25"/>
                </padding>
                <children>

                    <JFXTextField promptText="Nom" labelFloat="true" GridPane.columnIndex="0"
                                  GridPane.rowIndex="0"/>
                    <JFXComboBox fx:id="comboboxGender" prefWidth="Infinity" promptText="Sexe" labelFloat="true"
                                 GridPane.columnIndex="1"
                                 GridPane.rowIndex="0"/>
                    <JFXComboBox fx:id="comboboxRace" promptText="Origine" labelFloat="true"
                                 GridPane.columnIndex="0"
                                 GridPane.rowIndex="1" prefWidth="Infinity"/>
                    <JFXComboBox fx:id="comboboxProfession" promptText="Métier" labelFloat="true"
                                 GridPane.columnIndex="1"
                                 GridPane.rowIndex="1" prefWidth="Infinity"/>

                    <EnergyBar styleClass="lifeBar" max="30" name="Energie Vitale" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <EnergyBar styleClass="manaBar" max="30" name="Energie Astrale" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

                    <!--<EnergyBar name="Energie Astrale"/>-->

                    <Label text="Caractéristiques" GridPane.columnIndex="0" GridPane.rowIndex="6"
                           GridPane.columnSpan="2">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="7" text="Force"/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="8" text="Intelligence"/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="9" text="Courage"/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="10" text="Force"/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="11" text="Adresse"/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="12" text="Attaque"/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="13" text="Parade"/>

                    <CharacteristicBar fx:id="courageBar" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                    <CharacteristicBar fx:id="intellBar" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                    <CharacteristicBar fx:id="charBar" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
                    <CharacteristicBar fx:id="adrBar" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
                    <CharacteristicBar fx:id="forceBar" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
                    <CharacteristicBar fx:id="attackBar" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
                    <CharacteristicBar fx:id="blockBar" GridPane.columnIndex="1" GridPane.rowIndex="13"/>

                    <FlowPane GridPane.columnIndex="0" GridPane.rowIndex="14"
                              GridPane.columnSpan="2">
                    <Label text="Armures et protections" >
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                        <JFXButton text="+" textAlignment="CENTER" onAction="#handleClickAddProtection"/>
                    </FlowPane>
                    <ProtectionTable fx:id="protections" GridPane.columnIndex="0" GridPane.rowIndex="15"/>
                    <Label text="Armement" GridPane.columnIndex="1" GridPane.rowIndex="14">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                    <JFXTreeTableView GridPane.columnIndex="1" GridPane.rowIndex="15"/>

                    <Label text="Equipement" GridPane.columnIndex="0" GridPane.rowIndex="16"
                           GridPane.columnSpan="2">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                    <JFXTreeTableView GridPane.columnIndex="0" GridPane.rowIndex="17"/>

                    <Label text="Compétences" GridPane.columnIndex="1" GridPane.rowIndex="16"
                           GridPane.columnSpan="2">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                    <JFXTreeTableView GridPane.columnIndex="1" GridPane.rowIndex="17"/>

                </children>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
                </columnConstraints>
            </GridPane>

        </ScrollPane>
    </center>
    <bottom>
        <FlowPane BorderPane.alignment="BOTTOM_CENTER" alignment="CENTER_RIGHT">

            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            <children>
                <JFXButton fx:id="saveButton" onAction="#handleClickSave" text="Sauvegarder"/>
            </children>
        </FlowPane>
    </bottom>
</BorderPane>
