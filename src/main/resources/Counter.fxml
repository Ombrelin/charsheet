<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="GridPane">

    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
        <Label fx:id="label"/>
        <HBox alignment="CENTER" spacing="8">
            <Button defaultButton="true" styleClass="counter-button,minus-button" alignment="CENTER" onAction="#handleClickMinus"/>
            <TextField fx:id="field" prefWidth="64"/>
            <Button defaultButton="true" styleClass="counter-button,plus-button" alignment="CENTER" onAction="#handleClickPlus"/>
        </HBox>
    </VBox>

</fx:root>
